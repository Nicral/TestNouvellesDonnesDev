{% extends 'base.html.twig' %}

{% block title %}Nouvelles Donnes test Dev{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<h1>Accueil et liste</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Photo</th>
                <th>Message</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.prenom }}</td>
                <td>{{ client.nom }}</td>
                <td><img class="" src="{{ asset("/images/" ~ client.clientPhoto)}}" alt="Photo-{{client.clientPhoto}}"></td>
                <td>{{ client.clientMessage }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div id="app">
    <App />
    </div>
{% endblock %}
